<%-
  path_url = admin_integration_operators_subscriptions_path(integration)
-%>
<div class="card bg-light p-3 mb-3">
  <div class="row">
    <div class="col-md">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Name (namespace/name)</th>
            <th scope="col">Package</th>
            <th scope="col">Installed Version</th>
            <th scope="col">Version Available</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
        <%- operators.each do |x|
              manage_url = "#{path_url}/#{x[:namespace]}/#{x[:name]}"
        -%>
        <tr>
          <!-- package icon -->
          <td align="center">
            <%- unless x[:icon].nil? -%>
            <img width="32px" height="32px" src="data:image/svg+xml;base64,<%= x[:icon] %>"/>
            <%- end %>
          </td>
          <!-- name -->
          <td><%= x[:namespace] %>/<%= x[:name] %></td>
          <!-- package name -->
          <td><%= x[:package_name] %></td>
          <!-- installed version -->
          <td><%= x[:version] %></td>
          <%- if x[:upgrade] -%>
          <td><%= x[:update] %></td>
          <%- else -%>
          <td>No Update</td>
          <%- end -%>

          <%- case x[:state] -%>
          <%- when 'upgradepending', 'atlatestknown' %>
          <td align="center">
            <%= link_to 'Manage', manage_url, class: 'btn btn-info' %>
          </td>
          <%- else -%>
          <td align="center">
            <button type="button" class="btn btn-danger">Failed</button>
          </td>
          <%- end -%>
        </tr>
        <%- end -%>
        </tbody>
      </table>
    </div>
  </div>
</div>

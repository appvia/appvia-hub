<h1>Apps</h1>

<% if @apps.blank? %>
  <div class="alert alert-warning">
    No apps created yet
  </div>
<% end %>

<% @apps.each do |app| %>
  <div class="card shadow-sm mb-3">
    <div class="card-body">
      <h5 class="card-title">
        <%= icon 'cube' %>
        <%= link_to app.name, app_path(app) %>

        <small class="badge badge-info ml-2 text-monospace">
          <%= app.slug %>
        </small>
      </h5>

      <% if app.description.present? %>
        <div class="card-text mt-3">
          <%= simple_format app.description %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <%= delete_app_link app, css_class: 'float-right btn btn-danger' %>
    </div>
  </div>
<% end %>

<div class="btn-group float-right" role="group" aria-label="App actions">
  <button id="appActionsGroupDropdown" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Actions
  </button>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="appActionsGroupDropdown">
    <%= link_to 'Edit', edit_app_path(@app), class: 'dropdown-item' %>
    <%= delete_app_link @app, css_class: 'dropdown-item' %>
  </div>
</div>

<h1>
  <%= @app.name %>

  <small class="badge badge-info ml-3 text-monospace">
    <%= @app.slug %>
  </small>
</h1>

<p class="text-muted">
  Created <%= local_time_ago(@app.created_at) %>
</p>

<% if @app.description.present? %>
  <div class="lead">
    <%= simple_format @app.description %>
  </div>
<% end %>
